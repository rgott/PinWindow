<UserControl x:Class="Pin.EditableProjectItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pin"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <RadioButton>
        <Grid Width="261">
            <TextBox VerticalAlignment="Top" Margin="0,0,45,0"/>
            <TextBox VerticalAlignment="Bottom" Margin="5,20,45,0"/>
            <Button VerticalAlignment="Bottom" Width="40" HorizontalAlignment="Right" Content="Save"/>
            <Button VerticalAlignment="Top" Width="40" HorizontalAlignment="Right" Content="Cancel"/>
        </Grid>
    </RadioButton>
</UserControl>
