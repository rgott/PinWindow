<Window x:Class="Pin.SaveFileDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pin"
        Title="Replace or Skip Files"
        mc:Ignorable="d"
        Height="178.47" Width="300">
    <Grid>
        <StackPanel>
            <TextBlock Margin="10,5" FontSize="10">
                Moving <TextBlock Name="items" Text="1"/> item<TextBlock Name="itemsAddS" Text=""/> from <Hyperlink Name="FromHyperLink" NavigateUri="#">Downloads</Hyperlink> to <Hyperlink Name="ToHyperLink">Desktop</Hyperlink>
            </TextBlock>
            <TextBlock Margin="10,5" FontSize="13" TextWrapping="Wrap">
                The destination already has a file named "<TextBlock Name="fName" Text=""/>"
            </TextBlock>
            <TextBlock Margin="20,5">Replace the file in the destination</TextBlock>
            <TextBlock Margin="20,5">Skip this file</TextBlock>
            <TextBlock Margin="20,5">Compare info for both files</TextBlock>

        </StackPanel>
    </Grid>
</Window>
