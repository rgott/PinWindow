<UserControl x:Class="Pin.FormStates.Minimized"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pin.FormStates"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="20">
    <Border Name="borderMain" Background="Transparent" IsHitTestVisible="True" VerticalAlignment="Top" HorizontalAlignment="Left" Width="20" Height="20">
        <Polygon Name="triangle_borderMain" AllowDrop="True" IsHitTestVisible="True" Points="0,0 0,20, 20,0" Stroke="Transparent" Fill="{Binding Path=Fill, FallbackValue=Orange}" />
    </Border>
</UserControl>
