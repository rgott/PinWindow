<UserControl x:Class="Pin.MenuContainer.Menu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pin.MenuContainer"
             DragEnter="UserControl_DragEnter"
             mc:Ignorable="d" d:DesignWidth="300" Height="100">
    <UserControl.Resources>
        <Style x:Key="ContainerStyle" TargetType="UserControl">
            <Setter Property="Visibility" Value="Collapsed"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>
    </UserControl.Resources>
    <Grid>
        <local:MinimizedOpen x:Name="UI_Grid_MinimizedOpen" DataContext="{Binding Context}" Style="{StaticResource ContainerStyle}"/>
        <local:Maximized x:Name="UI_Grid_Maximized" DataContext="{Binding Context}" Style="{StaticResource ContainerStyle}"/>
        <local:Minimized x:Name="UI_Grid_MinimizedClosed" DataContext="{Binding Context}" Style="{StaticResource ContainerStyle}" Visibility="Visible"/>
        <local:ProjectView x:Name="UI_Grid_ProjectView" DataContext="{Binding Context}" Style="{StaticResource ContainerStyle}"/>
    </Grid>
</UserControl>
