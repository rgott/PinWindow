<UserControl x:Class="Pin.MenuContainer.Minimized"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pin.MenuContainer"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="20" Height="20" Width="20" VerticalAlignment="Top" HorizontalAlignment="Left">
    <Border Background="Transparent" IsHitTestVisible="True">
        <Polygon AllowDrop="True" Points="0,0 0,20, 20,0" Fill="{Binding SelectedProject.Color,FallbackValue=Orange}" />
    </Border>
</UserControl>
