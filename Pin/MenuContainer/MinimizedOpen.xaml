<UserControl x:Class="Pin.MenuContainer.MinimizedOpen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pin.MenuContainer"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="40">
    <Grid>
        <Rectangle Fill="{Binding UI_DragOut_Color,FallbackValue=Orange}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="20" Height="20" Margin="0,20,0,0" MouseDown="UI_Btn_MouseDown_DragOut"/>
        <Button Background="White" Template="{StaticResource PinBtn}" Margin="0,0,0,0" Click="UI_Btn_Sizing_Click">
            <Image Source="{StaticResource OpenArrow}"/>
        </Button>
        <Button Background="White" Template="{StaticResource PinBtn}" Margin="20,0,0,0" Click="UI_Btn_Exit_Click">
            <Image Source="{StaticResource Exit}"/>
        </Button>
        <local:Minimized Margin="20,20,0,0" />
    </Grid>
</UserControl>
